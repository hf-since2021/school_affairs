<%= render "shared/navbar" %>

<div class="split w-100 vh-100">

  <div class="split-sidebar fixed-w-250 h-100 bg-white p-3">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>プロジェクト名</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>プロジェクト1</td>
        </tr>
        <tr>
          <td>プロジェクト2</td>
        </tr>
        <tr>
          <td>プロジェクト3</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="split-main w-100-fixed-250 h-100 bg-gray-200 p-3">
    <div class='gantt-wrap'>
      <svg id="gantt"></svg>
    </div>

    <div class="pt-3">
      <button id="task-create" type="button" class="btn btn-info">新規</button>
      <button id="task-update" type="button" class="btn btn-secondary">編集</button>
      <button id="task-destroy" type="button" class="btn btn-secondary">削除</button>
      <button id="send" type="button" class="btn btn-secondary">保存</button>
      <form>
        id
        <input id="task-id" type="text">
        name
        <input id="task-name" type="text">
        description
        <input id="task-description" type="text">
      </form>
    </div>

  </div>

</div>

<%#= javascript_pack_tag 'gantt_local', 'data-turbolinks-track': 'reload'%>
<%= javascript_pack_tag 'gantt_local' %>