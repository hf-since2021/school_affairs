<%= render "shared/navbar" %>
<div class="split w-100 vh-100">
  <%= render 'annual_teachers/shared/annual_teacher_list', {teachers: @teachers} %>

  <div class="split-main w-100-fixed-250 h-100 bg-gray-200 p-3">
    <%= form_with model: @annual_teacher, url: teacher_annual_teacher_path(@teacher), class: "row gx-5 gy-3 m-3" do |f| %>
      <div class="col-md-2 pe-3 my-3">
        <%= f.label :year, "年度", class: "form-label text-nowrap" %>
        <%= f.text_field :year, autocomplete: "year", class: "form-control", value: @logined_term.year.name, disabled: true %>
      </div>
      <div class="col-md-2 px-3 my-3">
        <%= f.label :code, "コード", class: "form-label text-nowrap" %>
        <%= f.text_field :code, autocomplete: "code", class: "form-control", value: @teacher.code, disabled: true %>
      </div>
      <div class="col-md-4 ps-3 my-3">
        <%= f.label :full_name, "姓名", class: "form-label" %>
        <%= f.text_field :full_name, autocomplete: "full_name", class: "form-control" , value: "#{@teacher.last_name} #{@teacher.first_name}", disabled: true %>
      </div>
      <div class="col-md-4 my-3">
      </div>

      <div class="col-md-3 pe-3 my-3">
        <%= f.label :job_id, "職名", class: "form-label" %>
        <%= f.collection_select :job_id, @jobs, :id, :name, {prompt: "（職名）"}, {class: "form-control"} %>
      </div>
      <div class="col-md-3 px-3 my-3">
        <%= f.label :section_id, "校務分掌", class: "form-label" %>
        <%= f.collection_select :section_id, @sections, :id, :name, {prompt: "（校務分掌）"}, {class: "form-control"} %>
      </div>
      <div class="col-md-3 ps-3 my-3">
        <%= f.label :responsibility_id, "分掌役割", class: "form-label text-nowrap" %>
        <%= f.collection_select :responsibility_id, @responsibilities, :id, :name, {prompt: "（分掌役割）"}, {class: "form-control"} %>
      </div>
      <div class="col-md-3 my-3">
      </div>

      <div class="col-md-3 pe-3 my-3">
        <%= f.label :school_grade, "担当学年", class: "form-label" %>
        <%= f.text_field :school_grade, autocomplete: "school_grade", class: "form-control" %>
      </div>
      <div class="col-md-3 ps-3 my-3">
        <%= f.label :klass, "担当クラス", class: "form-label" %>
        <%= f.text_field :klass, autocomplete: "klass", class: "form-control" %>
      </div>
      <div class="col-md-6 my-3">
      </div>

      <div class="col-12">
        <button type="submit" class="btn btn-primary">登録</button>
      </div>
    <% end %>
  </div>
</div>