<div class="split-sidebar fixed-w-300 h-100 bg-white p-3">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>コード</th>
        <th>教員名</th>
        <th>(アカウント)</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>00000</td>
        <td><%= link_to "新規作成", new_teacher_path, {class: ""} %></td>
        <td>--------</td>
      </tr>
      <% teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.code %></td>
          <td><%= "#{teacher.last_name} #{teacher.first_name}" %></td>
          <% unless teacher.user_id.nil? %>
            <td><%= "(#{teacher.user.name})" %></td>
          <% else %>
            <td>未登録</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>