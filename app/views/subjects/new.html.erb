<%= render "shared/navbar" %>
<div class="split w-100 vh-100">
  <%= render 'subjects/shared/subject_list', {subject_areas: @subject_areas} %>

  <div class="split-main w-100-fixed-250 h-100 bg-gray-200 p-3">
    <%= form_with model: @subject, class: "row gx-5 gy-3 m-3" do |f| %>

      <div class="col-md-2 pe-3 my-3">
        <%= f.label :subject_area_id, "教科", class: "form-label text-nowrap" %>
        <%= f.collection_select :subject_area_id, @subject_areas, :id, :name, {prompt: "（教科）"}, {autofocus: true, class: "form-control"} %>
      </div>
      <div class="col-md-2 px-3 my-3">
        <%= f.label :code, "コード", class: "form-label text-nowrap" %>
        <%= f.text_field :code, autocomplete: "code", class: "form-control" %>
      </div>
      <div class="col-md-3 ps-3 my-3">
        <%= f.label :name, "科目名", class: "form-label" %>
        <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="col-12">
        <button type="submit" class="btn btn-primary">登録</button>
      </div>
    <% end %>
  </div>
</div>