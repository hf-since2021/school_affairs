<div class="d-flex justify-content-center align-items-center w-100 vh-100" >
  <div class="form-signin text-center w-25">
    <%= form_with url: user_switch_path, class: 'form', method: "post" do |f| %>
      <select name="year_term_id" class="form-select form-select-lg mb-3" size="4">
        <% @year_terms.each do |x| %>
          <option value=<%=x.id%> <%if x.activity%>selected<%end%>><%="#{x.year.name} #{x.term.name}"%></option>
        <% end %>
      </select>
      <div class="d-grid gap-2 d-md-block">
        <%= f.submit "ログイン", class: 'btn btn-lg btn-primary', autofocus: true %>
        <%= link_to :back do %>
          <button class='btn btn-lg btn-secondary'>戻る</button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>