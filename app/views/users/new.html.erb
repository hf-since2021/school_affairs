<%= render "shared/navbar" %>
<div class="split w-100 vh-100">
  <%= render 'users/shared/list', {users: @users} %>

  <div class="split-main w-100-fixed-250 h-100 bg-gray-200 p-3">
    <%= form_with model: @user, class: "row g-3 m-3" do |f| %>
      <div class="col-md-6 pe-3 my-3">
        <%= f.label :name, "ログインID", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
      <div class="col-md-6 ps-3 my-3">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "password", class: "form-control" %>
      </div>

      <%#= f.collection_select :category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"} %>
      <%#= f.check_box %>
      <div class="col-md-2 my-3">
        <div class="form-check">
          <span>
            利用者権限
          </span>
        </div>
      </div>
      <div class="col-md-2 my-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="read_only" id="role_read_only">
          <label class="form-check-label" for="role_read_only">
            閲覧許可
          </label>
        </div>
      </div>
      <div class="col-md-2 my-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="manager" id="role_manager" checked="checked">
          <label class="form-check-label" for="role_manager">
            一般利用者
          </label>
        </div>
      </div>
      <div class="col-md-2 my-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="admin" id="role_admin">
          <label class="form-check-label" for="role_admin">
            管理者
          </label>
        </div>
      </div>

      <div class="col-12">
        <button type="submit" class="btn btn-primary">登録</button>
      </div>
    <% end %>

  </div>
</div>