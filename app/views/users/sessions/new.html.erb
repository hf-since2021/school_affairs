<div class="custom-table vh-100 w-100">
  <div class="custom-middle-cell">
    <div class="form-signin mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <h1 class="h3 mb-3 fw-normal">ログイン</h1>
        
        <div class="form-floating">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          <%= f.label :name, "ログインID"%>
        </div>
        <div class="form-floating">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          <%= f.label :password, "パスワード" %>
        </div>

        <div class="form-check mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "状態を記憶する" %>
        </div>

        <%= f.submit "ログイン", class: 'w-100 btn btn-lg btn-primary' %>
          <%# <button type="button" class="btn btn-primary">ログイン</button> %>

        <%#= link_to destroy_user_session_path, method: :delete do %>
          <%# <button type="button" class="btn btn-primary">ログアウト</button> %>
        <%# end %>
      <% end %>
    </div>
  </div>
</div>